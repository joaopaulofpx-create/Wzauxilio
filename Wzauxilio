<script>
/* PARTÍCULAS */
const canvas=document.getElementById("particles");
const ctx=canvas.getContext("2d");
let w,h,parts=[];
function resize(){w=canvas.width=innerWidth;h=canvas.height=innerHeight;}
window.onresize=resize;resize();
for(let i=0;i<80;i++){
  parts.push({x:Math.random()*w,y:Math.random()*h,r:Math.random()*2+1,
    vx:(Math.random()-.5)*0.4,vy:(Math.random()-.5)*0.4});
}
function draw(){
  ctx.clearRect(0,0,w,h);
  parts.forEach(p=>{
    p.x+=p.vx;p.y+=p.vy;
    if(p.x<0||p.x>w)p.vx*=-1;
    if(p.y<0||p.y>h)p.vy*=-1;
    ctx.beginPath();
    ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
    ctx.fillStyle="rgba(30,144,255,.6)";
    ctx.fill();
  });
  requestAnimationFrame(draw);
}
draw();

/* SCRIPT */
const login=document.getElementById("login");
const panel=document.getElementById("panel");
const erro=document.getElementById("erro");
const keyInput=document.getElementById("keyInput");
const tabs=document.querySelectorAll(".tab");
const tabc=document.querySelectorAll(".tabc");
let expiraEm=0;

function entrar(){
  const key=keyInput.value.trim();
  if(key===""){erro.innerText="Digite uma key válida";erro.style.display="block";return;}
  const registro=localStorage.getItem("KEY_"+key);
  if(!registro){erro.innerText="Key inválida";erro.style.display="block";return;}
  expiraEm=parseInt(registro);
  if(Date.now()>expiraEm){erro.innerText="Key expirada";erro.style.display="block";return;}
  erro.style.display="none";
  login.classList.add("hidden");
  panel.classList.remove("hidden");
  tab(0);
  startStats();
  atualizarTempoKey();
}

function atualizarTempoKey(){
  const diff=expiraEm-Date.now();
  const el=document.getElementById("tempoKey");
  if(diff<=0){el.innerText="EXPIRADA";el.style.color="#ff4d4d";return;}
  const d=Math.floor(diff/86400000);
  const h=Math.floor(diff/3600000%24);
  const m=Math.floor(diff/60000%60);
  el.innerText=`${d}d ${h}h ${m}m`;
}
setInterval(atualizarTempoKey,60000);

function tab(i){
  tabs.forEach(t=>t.classList.remove("active"));
  tabc.forEach(c=>c.classList.add("hidden"));
  tabs[i].classList.add("active");
  tabc[i].classList.remove("hidden");
}

function toggleSwitch(el){el.classList.toggle("on");}

let fpsAtual=60;
function startStats(){
  function atualizarFPS(){
    fpsAtual=fps120.classList.contains("on")
      ?Math.floor(Math.random()*17)+110
      :Math.floor(Math.random()*26)+37;
    fps.innerText=fpsAtual;
    setTimeout(atualizarFPS,Math.random()*600+1200);
  }
  atualizarFPS();
}

function injetar(){
  let p=0;
  btnText.innerText="INJETANDO...";
  const i=setInterval(()=>{
    p+=8;
    progress.style.width=p+"%";
    if(p>=100){
      clearInterval(i);
      window.location.href="intent://launch/#Intent;package=com.dts.freefireth;end";
    }
  },120);
}

function abrirDiscord(){
  window.open("https://discord.gg/hqbRpy7Pfw","_blank");
}
</script>

